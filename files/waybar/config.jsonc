{
    "layer": "top",
    "position": "top",
    "height": 30,
    "spacing": 4,
    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["network", "pulseaudio", "cpu", "memory", "custom/temperature", "battery", "clock"],

    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "format": "{name}",
        "active-only": false
    },

    "tray": {
        "spacing": 10
    },

    "network": {
        "format-wifi": "{signalStrength}% 󰖩",
        "format-ethernet": "Connected 󰈀",
        "format-disconnected": "Disconnected 󰖪",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}",
        "on-click": "nm-connection-editor"
    },

    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-muted": "Muted 󰖁",
        "format-icons": {
            "headphones": "󰋋",
            "hands-free": "󰋍",
            "headset": "󰋎",
            "phone": "󰏲",
            "portable": "󰏲",
            "car": "󰄶",
            "default": ["󰕿", "󰖀", "󰕾"]
        },
        "scroll-step": 5,
        "on-click": "pavucontrol"
    },

    "cpu": {
        "format": "{usage}% 󰍛",
        "tooltip": true
    },

    "memory": {
        "format": "{percentage}% 󰘚",
        "tooltip": true,
	    "interval": 2
    },

    "custom/temperature": {
        "format": "{text}",
        "exec": "MyLinuxScripts/scripts/temperature",
        "return-type": "json"
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% 󰂄",
        "format-plugged": "{capacity}% 󰂄",
        "format-alt": "{time} {icon}",
        "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
        "tooltip": true
    },

    "clock": {
        "format": "{:%I:%M %p}",
        "tooltip-format": "<big>{:%Y-%m-%d %H:%M:%S}</big>",
        "interval": 1
    }
}
